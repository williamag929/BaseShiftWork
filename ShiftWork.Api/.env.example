# Database Connection
DB_CONNECTION_STRING=Server=localhost;Database=ShiftWorkDB;Trusted_Connection=True;TrustServerCertificate=True;

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_API_KEY=your-api-key

# Email Configuration (Zoho Mail)
EMAIL_SMTP_SERVER=smtp.zoho.com
EMAIL_SMTP_PORT=587
EMAIL_USE_SSL=true
EMAIL_SENDER_EMAIL=no-reply@joblogsmart.com
EMAIL_SENDER_NAME=JobLogSmart
EMAIL_REPLY_TO=support@joblogsmart.com
EMAIL_USERNAME=no-reply@joblogsmart.com
EMAIL_PASSWORD=your-zoho-password-here

# App Settings
APP_NAME=JobLogSmart
APP_URL=https://app.joblogsmart.com
INVITE_URL=https://app.joblogsmart.com/accept-invite
SUPPORT_EMAIL=support@joblogsmart.com

# Webhook Configuration (Optional)
WEBHOOK_URL=https://your-webhook-endpoint.com/webhook
WEBHOOK_SECRET_KEY=your-webhook-secret-key

# Email Configuration
# Note: .NET uses double underscore (__) for nested configuration keys
# These map to Smtp:Host, Smtp:Port, etc. in IConfiguration
Smtp__Host=smtp.zoho.com
Smtp__Port=587
Smtp__Username=no-reply@joblogsmart.com
Smtp__Password=your-zoho-password-here
Smtp__From=no-reply@joblogsmart.com
Email__From=no-reply@joblogsmart.com

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false

# Twilio Configuration (Optional - for SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# AWS S3 Configuration (Optional - for photo uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-1
