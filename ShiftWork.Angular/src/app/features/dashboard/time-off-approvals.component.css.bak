.toa-container {
  padding: 16px;
}

.toa-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.filters {
  display: flex;
  gap: 8px;
  align-items: center;
}

.filters input[type="text"] {
  width: 240px;
}

.btn-clear {
  padding: 6px 10px;
}

.loading, .error, .empty {
  padding: 24px;
  text-align: center;
}

.spinner {
  width: 32px;
  height: 32px;
  border: 4px solid #eee;
  border-top: 4px solid #1976d2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 8px auto;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.list {
  display: grid;
  gap: 8px;
}

.row {
  display: grid;
  grid-template-columns: 1.1fr 0.6fr 1.2fr 1fr 0.6fr 1.1fr;
  gap: 12px;
  align-items: start;
  padding: 12px;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  background: #fafafa;
}

.row.header {
  background: #f5f5f5;
  font-weight: 600;
  border: none;
}

.strong { font-weight: 600; }
.meta { font-size: 12px; color: #777; }
.meta.pto-balance { color: #1976d2; font-weight: 500; }
.meta.pto-balance .warning { color: #c62828; font-weight: 600; }

.status.pending { color: #b26a00; }
.status.approved { color: #2e7d32; }
.status.denied { color: #c62828; }

.actions-col {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.actions-col textarea {
  width: 100%;
}

.btn-group { display: flex; gap: 8px; }
.btn { padding: 8px 12px; border-radius: 6px; border: 1px solid transparent; cursor: pointer; }
.btn.approve { background: #e8f5e9; color: #2e7d32; border-color: #c8e6c9; }
.btn.deny { background: #ffebee; color: #c62828; border-color: #ffcdd2; }
.btn:disabled { opacity: 0.6; cursor: not-allowed; }

.pagination {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
  margin-top: 8px;
}

@media (max-width: 900px) {
  .row { grid-template-columns: 1fr; }
}
